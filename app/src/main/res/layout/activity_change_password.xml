<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:padding="20dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_change_password"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mật khẩu hiện tại -->
    <EditText
        android:id="@+id/etOldPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_old_password"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="?android:textColorHint"
        android:backgroundTint="?attr/colorPrimary"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mật khẩu mới -->
    <EditText
        android:id="@+id/etNewPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_new_password"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="?android:textColorHint"
        android:backgroundTint="?attr/colorPrimary"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etOldPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Xác nhận mật khẩu -->
    <EditText
        android:id="@+id/etConfirmPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_confirm_password"
        android:textColor="?android:textColorPrimary"
        android:textColorHint="?android:textColorHint"
        android:backgroundTint="?attr/colorPrimary"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etNewPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút xác nhận -->
    <Button
        android:id="@+id/btnChangePass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_confirm_change"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_marginTop="28dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút quay lại -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_cancel"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:backgroundTint="?attr/colorSurfaceVariant"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnChangePass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
