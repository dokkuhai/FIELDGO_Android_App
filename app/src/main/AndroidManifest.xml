<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FieldGoApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FIELDGO_Android_App">

        <!-- Login Activity -->
        <activity
            android:name=".view.FeedbackActivity"
            android:exported="false" />


        <!-- Full Image Activity -->
        <activity android:name=".view.FullImageActivity" />

        <!-- Payment Success Activity -->
        <activity
            android:name=".view.PaymentSuccessActivity"
            android:exported="false" />

        <!-- Payments Activity -->
        <activity
            android:name=".view.PaymentsActivity"
            android:exported="false" />

        <!-- Court Detail Activity -->
        <activity android:name=".view.AboutUsActivity"/>
        <activity
            android:name=".view.CourtDetailActivity"
            android:exported="false" />

        <!-- Booking Activity -->
        <activity
            android:name=".view.BookingActivity"
            android:exported="false" />

        <!-- Court List Activity (LAUNCHER) -->
        <activity
            android:name=".view.CourtListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Profile Activities -->
        <activity android:name=".view.ProfileActivity" />
        <activity android:name=".view.UpdateProfileActivity" />
        <activity android:name=".view.ChangePasswordActivity" />
        <activity android:name=".view.SettingsActivity" />


        <!-- Booking Management Activities (CỦA BẠN) -->
        <activity android:name=".view.BookingsActivity" />
        <activity android:name=".view.BookingDetailActivity" />
        <activity android:name=".view.BookingStatusHistoryActivity" />
        <activity android:name=".view.BookingStatisticsActivity" />
        <activity android:name=".view.MonthlyBookingReportActivity" />

    </application>

</manifest>